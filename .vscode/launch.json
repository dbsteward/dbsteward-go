{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "someapp build",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": ["--xml", "example/someapp_v1.xml", "--debug"],
      "dlvLoadConfig": {
        "followPointers": true,
        "maxVariableRecurse": 1,
        "maxStringLen": 300,
        "maxArrayValues": 100,
        "maxStructFields": -1
      }
    },
    {
      "name": "someapp diff",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": ["--oldxml", "example/someapp_v1.xml", "--newxml", "example/someapp_v2.xml", "--debug"],
      "dlvLoadConfig": {
        "followPointers": true,
        "maxVariableRecurse": 1,
        "maxStringLen": 300,
        "maxArrayValues": 100,
        "maxStructFields": -1
      }
    },
    {
      "name": "someapp extract",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "--dbschemadump", "--debug",
        "--sqlformat", "pgsql8",
        "--dbhost", "localhost",
        "--dbname", "someapp",
        "--dbpassword", "secret",
        "--dbuser", "postgres",
        "--outputfile", "example/someapp_extracted.xml",
      ],
      "dlvLoadConfig": {
        "followPointers": true,
        "maxVariableRecurse": 1,
        "maxStringLen": 300,
        "maxArrayValues": 100,
        "maxStructFields": -1
      }
    }
  ]
}